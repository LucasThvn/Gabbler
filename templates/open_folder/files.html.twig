<section class="files">
    <h2>TRACKS IDEAS</h2>
    <div class="folders_container d-flex justify-content-between flex-column">
        <div>
            {% for folder in folders %}
                <div class="idea_container {% if currentFolder.id is defined and currentFolder.id == folder.id %}active{% endif %}">
                    <a href="{{ path('open', {'id' : folder.id}) }}">
                        <div class="idea">
                            <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
                                 viewBox="0 0 45.779 42">
                                <defs>
                                    <filter id="Icon_material-library-music" x="0" y="0" filterUnits="userSpaceOnUse">
                                        <feComposite in="SourceGraphic"/>
                                    </filter>
                                </defs>
                                <g transform="matrix(1, 0, 0, 1, 0, 0)" filter="url(#Icon_material-library-music)">
                                    <path id="Icon_material-library-music-2" data-name="Icon material-library-music"
                                          d="M33.4,3H13.134A3.215,3.215,0,0,0,9.756,6V24a3.215,3.215,0,0,0,3.378,3H33.4a3.215,3.215,0,0,0,3.378-3V6A3.215,3.215,0,0,0,33.4,3Zm-3.378,7.5H24.956v8.25a4.009,4.009,0,0,1-4.222,3.75,4.009,4.009,0,0,1-4.222-3.75A4.009,4.009,0,0,1,20.734,15a4.478,4.478,0,0,1,2.533.765V7.5h6.756ZM6.378,9H3V30a3.215,3.215,0,0,0,3.378,3H30.023V30H6.378Z"/>
                                </g>
                            </svg>
                            <p class="m-0 pb-1 pl-1">{{ folder.name | capitalize }}</p>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
        <div class="idea_container add_idea">
            <a href="{{ path('folder_new') }}">
                <div class="idea">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32">
                        <path id="Icon_material-library-add" data-name="Icon material-library-add"
                              d="M5.5,8H3V25.5A2.507,2.507,0,0,0,5.5,28H23V25.5H5.5Zm20-5h-15A2.507,2.507,0,0,0,8,5.5v15A2.507,2.507,0,0,0,10.5,23h15A2.507,2.507,0,0,0,28,20.5V5.5A2.507,2.507,0,0,0,25.5,3ZM24.25,14.25h-5v5h-2.5v-5h-5v-2.5h5v-5h2.5v5h5Z"
                              transform="translate(-3 -3)"/>
                    </svg>

                    <p class="m-0 pb-1 pl-1">Add a track idea</p>
                </div>
            </a>
        </div>
    </div>
</section>